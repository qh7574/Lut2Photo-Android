<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- 主内容区域 -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 标题栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/single_file_processing"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_help_dashboard"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/help"
                    app:icon="@drawable/ic_help"
                    app:iconSize="36dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp" />
            </LinearLayout>

            <!-- 1. 处理控制卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_image_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/images_selected_zero"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />


                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_processed_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="已处理: 0 / 0"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_stop_processing"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="停止处理"
                        android:visibility="gone" />


                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <!-- 文件选择按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_select_images"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="@string/select_images_from_gallery"
                        app:icon="@drawable/outline_photo_24"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_start_processing"
                        app:icon="@drawable/outline_photo_filter_24"
                        app:iconSize="24dp"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/start_processing"
                        android:textSize="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                </LinearLayout>
                    <!-- 输出文件夹选择 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_select_output_folder"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            app:icon="@drawable/outline_folder_24"
                            android:text="@string/select_output_folder" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_output_folder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:singleLine="false"
                            android:gravity="center"
                            android:text="@string/folder_not_set"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. 参数设置（可折叠） -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/layout_params_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:minHeight="24dp"
                        android:orientation="horizontal"
                        tools:ignore="TouchTargetSizeCheck">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/parameter_settings"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                        <ImageView
                            android:id="@+id/button_toggle_params"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/toggle_section"
                            android:src="@drawable/ic_expand_less" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_params_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical">

                        <!-- 2. 图片预览 -->
                        <include
                            android:id="@+id/preview_card_dashboard"
                            layout="@layout/component_image_preview_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp" />

                        <!-- 主要LUT选择 -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_marginBottom="8dp"
                            android:hint="LUT 1">

                            <AutoCompleteTextView
                                android:id="@+id/dropdown_lut"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- 第二个LUT选择 -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_marginBottom="8dp"
                            android:hint="LUT 2">

                            <AutoCompleteTextView
                                android:id="@+id/dropdown_lut2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:inputType="none"
                                android:layout_marginBottom="8dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- 主要LUT强度设置 -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="LUT1 效果强度"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.google.android.material.slider.Slider
                                    android:id="@+id/slider_strength"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:layout_weight="1"
                                    android:contentDescription="@string/effect_strength"
                                    android:stepSize="1"
                                    android:value="100"
                                    android:valueFrom="0"
                                    android:valueTo="100" />

                                <TextView
                                    android:id="@+id/textStrengthValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="48dp"
                                    android:text="100%"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                            </LinearLayout>

                            <!-- 第二个LUT效果强度 -->
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:text="LUT2 效果强度"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.google.android.material.slider.Slider
                                    android:id="@+id/slider_lut2_strength"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:layout_weight="1"
                                    android:contentDescription="第二个LUT效果强度滑块"
                                    android:stepSize="1"
                                    android:value="100"
                                    android:valueFrom="0"
                                    android:valueTo="100" />

                                <TextView
                                    android:id="@+id/textLut2StrengthValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="48dp"
                                    android:text="100%"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:text="输出质量"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                            <!-- 在质量滑块后添加显示值的TextView -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.google.android.material.slider.Slider
                                    android:id="@+id/slider_quality"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:layout_weight="1"
                                    android:contentDescription="@string/output_quality"
                                    android:stepSize="1"
                                    android:value="97"
                                    android:valueFrom="50"
                                    android:valueTo="100" />

                                <TextView
                                    android:id="@+id/textQualityValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="48dp"
                                    android:text="97"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                            </LinearLayout>

                            <!-- 抖动类型 -->
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:text="@string/dither_type"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                            <com.google.android.material.button.MaterialButtonToggleGroup
                                android:id="@+id/toggle_group_dither"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                app:selectionRequired="true"
                                app:singleSelection="true">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_dither_floyd"
                                    style="@style/Widget.Lut2Photo.Button.OutlinedButton.ToggleButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Floyd" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_dither_random"
                                    style="@style/Widget.Lut2Photo.Button.OutlinedButton.ToggleButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Random" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_dither_none"
                                    style="@style/Widget.Lut2Photo.Button.OutlinedButton.ToggleButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="None" />

                            </com.google.android.material.button.MaterialButtonToggleGroup>


                            <!-- 水印设置 -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/outline_ink_marker_24" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="启用水印"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:id="@+id/switch_watermark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:checked="false"
                                        android:gravity="center|right" />


                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_watermark_settings"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="水印设置"
                                        android:textSize="14sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <!-- 胶片颗粒设置 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView_grain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:src="@drawable/outline_grain_24" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="@string/film_grain"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:id="@+id/switch_grain"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="8dp"
                                        android:checked="false"
                                        android:gravity="center|right" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_grain_settings"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/grain_settings"
                                        android:textSize="14sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>

    <!-- BottomSheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="80dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- BottomSheet 拖拽指示器 -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bottom_sheet_drag_handle" />

        <!-- BottomSheet 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/image_gallery"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear_images"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/clear_images" />

        </LinearLayout>

        <!-- 图片网格 - 修复滑动冲突和支持全屏 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_images"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
