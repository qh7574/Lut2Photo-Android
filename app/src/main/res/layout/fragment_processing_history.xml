<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- 统一标题样式 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处理历史"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp" />

        <!-- 操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_history_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="共 0 条处理记录"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空记录"
                app:icon="@drawable/ic_delete_24"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- 处理记录列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 底部多选控制条 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selection_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

            <!-- 返回按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_exit_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                app:icon="@drawable/ic_close_24"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- 全选按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"
                app:icon="@drawable/ic_select_all_24"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- 取消选择按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_deselect_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                app:icon="@drawable/ic_deselect_24"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- 分享按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                app:icon="@drawable/ic_share_24"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>