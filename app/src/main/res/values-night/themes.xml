<?xml version="1.0" encoding="utf-8"?>
<!--
    深色模式主题配置
    
    此文件定义了应用在深色模式下的主题样式。
    当系统切换到深色模式或用户选择"跟随系统"时，Android 会自动加载此文件中的主题。
    
    颜色命名规则：
    - md_theme_dark_* : Material Design 3 深色主题颜色
    - 所有颜色定义在 values/colors.xml 中
    
    与 values/themes.xml 的对应关系：
    - Theme.Lut2Photo (浅色) ↔ Theme.Lut2Photo (深色)
    - Theme.Lut2Photo.Light ↔ Theme.Lut2Photo.Dark
    - Theme.Lut2Photo.Dynamic ↔ Theme.Lut2Photo.Dynamic
-->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== 基础应用主题（深色版本）==================== -->
    <!-- 
        用于"跟随系统"模式
        当系统处于深色模式时，此主题会覆盖 values/themes.xml 中的同名主题
    -->
    <style name="Theme.Lut2Photo" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        
        <!-- 次要色调 -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        
        <!-- 第三色调 -->
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        
        <!-- 错误色调 -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        
        <!-- 轮廓色 -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        
        <!-- 背景色 - 深色模式核心 -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        
        <!-- 表面色 - 卡片、对话框等组件背景 -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        
        <!-- 反色（用于 Snackbar 等需要高对比度的组件）-->
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
        
        <!-- 系统栏配置 - 深色模式下使用深色图标 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
        
        <!-- BottomSheet 主题 -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Lut2Photo.BottomSheetDialog</item>
    </style>

    <!-- ==================== 浅色主题（深色模式下不变）==================== -->
    <!-- 
        强制浅色主题，即使系统处于深色模式也保持浅色
        用于用户明确选择"浅色模式"的场景
    -->
    <style name="Theme.Lut2Photo.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

    <!-- ==================== 深色主题==================== -->
    <!-- 
        强制深色主题
        用于用户明确选择"深色模式"的场景
    -->
    <style name="Theme.Lut2Photo.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

    <!-- ==================== 动态颜色主题（深色版本）==================== -->
    <!-- 
        Material You 动态颜色主题
        在 Android 12+ 设备上，会根据用户壁纸自动生成配色
        深色模式下系统栏使用浅色图标
    -->
    <style name="Theme.Lut2Photo.Dynamic" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

    <!-- ==================== 颜色选择器对话框主题（深色版本）==================== -->
    <style name="Theme.ColorPickerDialog.Light" parent="Theme.Material3.Light.Dialog">
        <item name="android:colorBackground">@color/md_theme_light_surface</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="android:textColorPrimary">@color/md_theme_light_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorAccent">@color/md_theme_light_primary</item>
    </style>

    <style name="Theme.ColorPickerDialog.Dark" parent="Theme.Material3.Dark.Dialog">
        <item name="android:colorBackground">@color/md_theme_dark_surface</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="android:textColorPrimary">@color/md_theme_dark_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorAccent">@color/md_theme_dark_primary</item>
    </style>

    <!-- ==================== 全屏图片查看主题 ==================== -->
    <!-- 全屏模式始终使用黑色背景，不受深浅色模式影响 -->
    <style name="Theme.Lut2Photo.Fullscreen" parent="Theme.Lut2Photo">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- ==================== BottomSheet 对话框主题覆盖 ==================== -->
    <style name="ThemeOverlay.Lut2Photo.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!-- 深色模式下 BottomSheet 会自动使用深色表面色 -->
    </style>

    <!-- ==================== 自定义组件样式 ==================== -->
    
    <!-- Slider 滑块样式 - 加深禁用状态轨道颜色 -->
    <style name="Widget.Lut2Photo.Slider" parent="Widget.Material3.Slider">
        <item name="trackColorInactive">@color/slider_track_inactive</item>
    </style>

    <!-- RangeSlider 范围滑块样式 -->
    <style name="Widget.Lut2Photo.RangeSlider" parent="Widget.Material3.Slider">
        <item name="trackColorInactive">@color/slider_track_inactive</item>
    </style>

    <!-- ToggleButton 切换按钮样式 - 选中状态使用 Primary 颜色 -->
    <style name="Widget.Lut2Photo.Button.OutlinedButton.ToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/toggle_button_background</item>
        <item name="android:textColor">@color/toggle_button_text</item>
        <item name="iconTint">@color/toggle_button_text</item>
    </style>

</resources>
