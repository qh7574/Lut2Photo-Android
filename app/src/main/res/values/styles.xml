<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 横屏模式下的半透明outline按钮样式 -->
    <style name="Widget.App.Button.LandscapeOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/landscape_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <!-- 横屏模式下的半透明FAB样式 -->
    <style name="Widget.App.FloatingActionButton.Landscape" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:background">@drawable/landscape_fab_background</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:alpha">0.8</item>
    </style>
</resources>